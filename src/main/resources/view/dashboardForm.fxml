<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="400" prefWidth="500" style="-fx-background-color: #E8F5E9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardFormController">

    <!-- Header bar -->
    <Rectangle fill="#43a047" height="50.0" width="500.0" />
    <Label layoutX="168.0" layoutY="11.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Student Dashboard" />

    <!-- Profile labels -->
    <Label layoutX="50.0" layoutY="98.0" text="Student ID:" />
    <Label fx:id="lbl_StudentId" layoutX="180.0" layoutY="98.0" prefHeight="18.0" prefWidth="178.0" text="N/A" />

    <Label layoutX="50.0" layoutY="138.0" text="Full Name:" />
    <Label fx:id="lbl_FullName" layoutX="180.0" layoutY="138.0" prefHeight="18.0" prefWidth="178.0" text="N/A" />

    <Label layoutX="50.0" layoutY="178.0" text="Email:" />
    <Label fx:id="lbl_Email" layoutX="180.0" layoutY="178.0" prefHeight="18.0" prefWidth="178.0" text="N/A" />

    <Label layoutX="50.0" layoutY="218.0" text="Date of Birth:" />
    <Label fx:id="lbl_DOB" layoutX="180.0" layoutY="218.0" prefHeight="18.0" prefWidth="178.0" text="N/A" />

    <Label layoutX="50.0" layoutY="258.0" text="Gender:" />
    <Label fx:id="lbl_Gender" layoutX="180.0" layoutY="258.0" prefHeight="18.0" prefWidth="178.0" text="N/A" />

    <!-- Logout Button -->
    <Button layoutX="384.0" layoutY="350.0" onAction="#btn_LogoutOnAction" prefHeight="26.0" prefWidth="70.0" text="Logout" />

</AnchorPane>
